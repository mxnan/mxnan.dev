---
import type { CollectionEntry } from "astro:content";
import { formattedDate } from "../utils";

const { blog } = Astro.props;
//<img src={blog.data.ogimage} alt="og-image" />
interface Props {
  blog: CollectionEntry<"blog">;
}
---

<a
  class="flex justify-between items-start group
     pt-8 pb-12 relative border-sky-800"
  href={`/blogs/${blog.slug}`}
>
  <span
    class="absolute bottom-0 left-0
    h-[0.3px] bg-sky-500 group-hover:translate-x-[550px]
    transition-all duration-700 ease-out
     max-w-md group-hover:max-w-[100px] w-full"
  ></span>
  <div class="space-y-4 w-full mr-2">
    <p class="text-2xl font-title tracking-wider">{blog.data.title}</p>
    <p class="text-sm font-light text-zinc-200">{blog.data.description}</p>
  </div>
  <div class="flex flex-col gap-3 justify-start items-start">
    <img
      src="/icons/circle-forward.svg"
      alt="visit-link"
      aria-label="visit-link"
      class="group-hover:scale-125 group-hover:translate-x-12 transition-transform ease-out duration-700"
    />
    <p
      class="whitespace-nowrap text-sm group-hover:text-base group-hover:text-sky-500 transition-all ease-out duration-700"
    >
      {formattedDate(blog.data.pubDate)}
    </p>
  </div>
</a>
